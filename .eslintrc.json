{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "google",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier":  [
            "error",
            {
                "singleQuote": true,
                "tabWidth": 2,
                "trailingComma": "all"
            }
        ]
    }
}
