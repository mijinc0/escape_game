{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "google",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier":  [
            "error",
            {
                "printWidth": 120,
                "singleQuote": true,
                "tabWidth": 2,
                "trailingComma": "all"
            }
        ],
        "no-multi-spaces": 0,
        "no-unused-vars": 0,
        "require-jsdoc": 0,
        "valid-jsdoc": 0,
        "camelcase": "off"
    }
}
