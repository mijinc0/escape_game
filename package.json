{
  "name": "simple_game",
  "version": "1.0.0",
  "description": "",
  "main": "./electron/public/main.js",
  "scripts": {
    "buildWeb": "rm -rf ./dist/* && npx webpack",
    "buildElectron": "rm -rf ./electron/public/assets/* && rm -rf ./electron/public/js/* && npx webpack --env.electron && npx electron-builder --linux",
    "serve": "npx http-server ./dist -p 8080 -o -c-1",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ./node_modules/.bin/mocha -r ts-node/register $(find ./src/test/ -name '*.spec.ts')",
    "format": "npx eslint 'src/**/*.ts' --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "phaser": "^3.22.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "copy-webpack-plugin": "^5.1.1",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "eslint": "^7.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^0.1.3",
    "http-server": "^0.12.1",
    "prettier": "^2.0.5",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "build": {
    "appId": "com.blueArcade.simpeEscapeGame",
    "productName": "simpleEscapeGame",
    "copyright": "Copyright Â© 2020 mijinc0",
    "directories": {
      "output": "./electron/public/__build"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ]
    }
  }
}
